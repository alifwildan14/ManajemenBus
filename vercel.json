{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js", 
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.js" 
    },
    {
      "src": "/script.js", 
      "dest": "public/script.js"
    },
    {
      "src": "/style.css", 
      "dest": "public/style.css"
    },
    {
      "handle": "filesystem" 
    },
    {
      "src": "/(.*)",         
      "dest": "public/index.html" 
    }
  ]
}    